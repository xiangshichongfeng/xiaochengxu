/* 顶部导航的样式  */
.topBanner{
  width:100%;
  height:40px;
  background-color: #ff6767;
  padding:0;
  margin:0;
}
.topBanner .tLeft{
  width:40px;
  height:40px;
  float:left;
  background-image: url('http://ov64c42s3.bkt.clouddn.com/search.png');
  background-position: center center;
  background-size: 20px 20px;
  background-repeat: no-repeat;
}
.topBanner .tRight{
  width:40px;
  height:40px;
  float:right;
  text-align: center;
  font-size:12px;
  color:#fff;
  margin-right:10px;
  padding-top:23px; 
  background-image: url('http://ov64c42s3.bkt.clouddn.com/add.png');
  background-position: center 5px;
  background-size: 15px 15px;
  background-repeat: no-repeat;
}
.topBanner .tMiddle{
  margin-right:50px;
  margin-left:40px;
  height:100%;
}
.topBanner .tMiddle .tList{
  width:100%;
  height:100%;
  padding-left:20px;
  padding-right:20px;
  box-sizing: border-box;
}
.topBanner .tMiddle .tList .list{
  width:25%;
  height: 100%;
  float: left;
  text-align: center;
  line-height: 40px;
  color:#fff;
  font-size:14px;
}
.menu .listshow{
    display:none;  
}
.menu .listshow.active{
  display:block;
}


